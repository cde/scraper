<section class="hero is-primary is-small">
    <div class="hero-body"><div class="container"><h1 id="animationTitle" class="title">
        MIT News Robotics
    </h1> <h2 id="animationSub" class="subtitle">
        Deep learning.
    </h2></div></div>
</section>
<section>
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-10-fullhd is-12">
                <div id="articles">
                {{#each articles}}
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-128x128">
                                <a href="http://news.mit.edu/"+ {{this.link}} target="_blank"><img src={{this.imageUrl}}></a>

                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <h2 class="subtitle"><a href={{this.link}}>{{this.title}}</a></h2>
                                <p>{{this.summary}}
                                    <br>
                                </p>
                            </div>
                        </div>
                    </article>
                {{/each}}

                </div>
            </div>
        </div>
    </div>
</section>